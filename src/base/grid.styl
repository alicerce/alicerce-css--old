/* SG
# Base/Grid

thanks to [CSS Grid with Variables](https://codepen.io/jacobberglund/pen/bwxxRy) by @jacobberglund


*/
$columns = 12

:root
  --columns $columns
  --gutter 14px

.container
  display flex
  flex-direction row
  flex-wrap wrap

.columns
  // margin 0 calc(var(--gutter) - ( var(--gutter) * 2) )
  align-content stretch
  align-items stretch
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content flex-start
  width 100%

.column
  display block
  flex-basis calc((100% / var(--columns)) * var(--column-width))
  order 0
  padding-left calc(var(--gutter))
  padding-right calc(var(--gutter))

  for $col in (1..$columns)
    &.is-{$col}
      --column-width: $col
