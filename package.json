{
  "name": "alicerce-css",
  "version": "0.0.0",
  "description": "CSS components library",
  "main": "index.js",
  "author": "Luiz Tanure",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "stylus src/index.styl --out dist/index.css --sourcemap",
    "build--watch": "stylus --watch src/index.styl --out dist/index.css --sourcemap ",
    "commitmsg": "validate-commit-msg",
    "lint": "stylint src",
    "lint-watch": "yarn lint --watch",
    "dev": "npm-run-all lint-watch build--watch"
  },
  "dependencies": {
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.2",
    "stylelint": "^9.1.1",
    "stylus": "^0.54.5",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "autoFix": true,
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPatternErrorMsg": "Subject must be in format 'type: Commit message'"
    }
  }
}
